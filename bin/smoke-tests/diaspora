#!/bin/bash
set -euo pipefail

# Smoke test for Diaspora - https://github.com/diaspora/diaspora
# On macOS, you can run this script via Docker:
# $ docker run -it --rm -v .:/src ubuntu:latest /src/bin/smoke-tests/diaspora

# Use sudo if available (needed in GHA), skip if not (Docker runs as root)
SUDO=""
if command -v sudo &> /dev/null; then
    SUDO="sudo"
fi

export DEBIAN_FRONTEND=noninteractive
$SUDO apt-get update
$SUDO apt-get install -y --no-install-recommends \
    build-essential \
    git \
    ca-certificates \
    curl \
    cmake \
    pkg-config \
    libyaml-dev \
    libffi-dev \
    libxml2-dev \
    libxslt-dev \
    libpq-dev \
    default-libmysqlclient-dev \
    libcurl4-openssl-dev \
    libyajl-dev \
    libmagickwand-dev \
    libgit2-dev \
    libssh2-1-dev \
    libidn-dev

# Install rv from latest release
echo ""
echo "Installing rv..."
curl --proto '=https' --tlsv1.2 -LsSf https://github.com/spinel-coop/rv/releases/latest/download/rv-installer.sh | sh
source "$HOME/.cargo/env"

[[ -d diaspora ]] || git clone --depth 1 https://github.com/diaspora/diaspora.git
cd diaspora

rv ci

echo ""
echo "Success: diaspora smoke test passed"
