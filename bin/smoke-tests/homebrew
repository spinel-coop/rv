#!/bin/bash
set -euo pipefail

# Smoke test for Homebrew - https://github.com/Homebrew/brew
# On macOS, you can run this script via Docker:
# $ docker run -it --rm -v .:/src ubuntu:latest /src/bin/smoke-tests/homebrew

# Use sudo if available (needed in GHA), skip if not (Docker runs as root)
SUDO=""
if command -v sudo &> /dev/null; then
    SUDO="sudo"
fi

export DEBIAN_FRONTEND=noninteractive
$SUDO apt-get update
$SUDO apt-get install -y --no-install-recommends \
    build-essential \
    git \
    ca-certificates \
    curl \
    libffi-dev \
    libyaml-dev \
    python3-dev

# Install rv from latest release
echo ""
echo "Installing rv..."
curl --proto '=https' --tlsv1.2 -LsSf https://github.com/spinel-coop/rv/releases/latest/download/rv-installer.sh | sh
source "$HOME/.cargo/env"

[[ -d brew ]] || git clone --depth 1 https://github.com/Homebrew/brew.git
cd brew/Library/Homebrew

rv ci

echo ""
echo "Success: homebrew smoke test passed"
