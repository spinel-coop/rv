#!/bin/bash
set -euo pipefail

# Smoke test for Lobsters - https://github.com/lobsters/lobsters
# On macOS, you can run this script via Docker:
# $ docker run -it --rm -v .:/src ubuntu:latest /src/bin/smoke-tests/lobsters

# Use sudo if available (needed in GHA), skip if not (Docker runs as root)
SUDO=""
if command -v sudo &> /dev/null; then
    SUDO="sudo"
fi

export DEBIAN_FRONTEND=noninteractive
$SUDO apt-get update
$SUDO apt-get install -y --no-install-recommends \
    build-essential \
    git \
    ca-certificates \
    curl \
    libyaml-dev \
    libmariadb-dev \
    libsqlite3-dev

# Install rv from latest release
echo ""
echo "Installing rv..."
curl --proto '=https' --tlsv1.2 -LsSf https://github.com/spinel-coop/rv/releases/latest/download/rv-installer.sh | sh
source "$HOME/.cargo/env"

[[ -d lobsters ]] || git clone --depth 1 https://github.com/lobsters/lobsters.git
cd lobsters

rv ci

echo ""
echo "Success: lobsters smoke test passed"
