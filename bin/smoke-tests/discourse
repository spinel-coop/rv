#!/bin/bash
set -euo pipefail

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Smoke test for Discourse - https://github.com/discourse/discourse
# On macOS, you can run this script via Docker:
# $ docker run -it --rm -v .:/src rust:latest /src/bin/smoke-tests/discourse

# Use sudo if available (needed in GHA), skip if not (Docker runs as root)
SUDO=""
if command -v sudo &> /dev/null; then
    SUDO="sudo"
fi

$SUDO apt-get update
$SUDO apt-get install -y --no-install-recommends \
    build-essential \
    git \
    ca-certificates \
    pkg-config \
    libyaml-dev \
    libpq-dev \
    libxml2-dev \
    libxslt-dev \
    zlib1g-dev \
    libsqlite3-dev

[[ -d discourse ]] || git clone --depth 1 https://github.com/discourse/discourse.git
cd discourse

"$DIR"/../rv ci

echo ""
echo "Success: discourse smoke test passed"
