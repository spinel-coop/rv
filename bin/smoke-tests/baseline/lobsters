#!/usr/bin/env bash
set -euo pipefail

# Baseline smoke test for Lobsters (traditional bundler approach)
# https://github.com/lobsters/lobsters

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
IMAGE_NAME="baseline-lobsters"

echo "Building baseline Docker image..."
docker build --no-cache --progress=plain -f "$SCRIPT_DIR/lobsters.Dockerfile" -t "$IMAGE_NAME" "$SCRIPT_DIR"

echo ""
echo "Baseline smoke test for lobsters passed!"
