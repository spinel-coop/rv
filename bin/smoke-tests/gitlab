#!/bin/bash
set -euo pipefail

# Smoke test for GitLab - https://gitlab.com/gitlab-org/gitlab
# On macOS, you can run this script via Docker:
# $ docker run -it --rm -v .:/src ubuntu:latest /src/bin/smoke-tests/gitlab

# Use sudo if available (needed in GHA), skip if not (Docker runs as root)
SUDO=""
if command -v sudo &> /dev/null; then
    SUDO="sudo"
fi

export DEBIAN_FRONTEND=noninteractive
$SUDO apt-get update
$SUDO apt-get install -y --no-install-recommends \
    build-essential \
    git \
    ca-certificates \
    curl \
    pkg-config \
    cmake \
    libyaml-dev \
    libre2-dev \
    libffi-dev \
    libxml2-dev \
    libxslt-dev \
    libcurl4-openssl-dev \
    libicu-dev \
    libkrb5-dev \
    libpq-dev \
    libpcre2-dev \
    libgpgme-dev \
    zlib1g-dev

# Install rv from latest release
echo ""
echo "Installing rv..."
curl --proto '=https' --tlsv1.2 -LsSf https://github.com/spinel-coop/rv/releases/latest/download/rv-installer.sh | sh
source "$HOME/.cargo/env"

[[ -d gitlab ]] || git clone --depth 1 https://gitlab.com/gitlab-org/gitlab.git
cd gitlab

rv ci

echo ""
echo "Success: gitlab smoke test passed"
