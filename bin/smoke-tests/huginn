#!/bin/bash
set -euo pipefail

# Smoke test for Huginn - https://github.com/huginn/huginn

source "$(dirname "$0")/shared.sh"

macos_docker_reexec

setup_packages \
    libyaml-dev \
    libffi-dev \
    libxml2-dev \
    libxslt-dev \
    libpq-dev \
    default-libmysqlclient-dev \
    libcurl4-openssl-dev \
    libsqlite3-dev

setup_rv

[[ -d huginn ]] || git clone --depth 1 https://github.com/huginn/huginn.git
cd huginn

rv ci

rv run bundle check

smoke_test_success "huginn"
